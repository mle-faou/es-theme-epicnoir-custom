<theme>
  <formatVersion>7</formatVersion>

  <variables>
    <fullscreenfixSubsetname>Emulationstation Screen Size</fullscreenfixSubsetname>
    <SystemviewSubsetName>System Scroll View</SystemviewSubsetName>
    <controllerSubsetName>Show Controllers</controllerSubsetName>
    <shortdescriptionSubsetName>Show Short Description</shortdescriptionSubsetName>
	<menutextsizeSubsetName>Menu Text Size</menutextsizeSubsetName>
  </variables>

  <subset name="fullscreenfix" displayName="${fullscreenfixSubsetname}">
    <include name="ES Header" displayName="${ES Header}">./header.xml</include>
    <include name="ES Fullscreen" displayName="${ES Fullscreen}">./fullscreen.xml</include>
    <include name="4:3" displayName="${4:3}">./fullscreenv.xml</include>
  </subset>

  <subset name="Systemview" displayName="${SystemviewSubsetName}">
    <include name="Vertical" displayName="${Vertical}">./_art/systemview/vertical.xml</include>
    <include name="Horizontal" displayName="${Horizontal}">./_art/systemview/horizontal.xml</include>
  </subset>

  <subset name="controller" displayName="${controllerSubsetName}">
    <include name="on" displayName="${on}"/>
    <include name="off" displayName="${off}">./_art/settings/controllers.xml</include>
  </subset>

  <subset name="shortdescription" displayName="${shortdescriptionSubsetName}">
    <include name="on" displayName="${on}"/>
    <include name="off" displayName="${off}">./_art/settings/shortdescription.xml</include>
  </subset>
  
   <subset name="menutextsize" displayName="${menutextsizeSubsetName}">
    <include name="Normal" displayName="${Normal}">./_art/menutext/Normal.xml</include>
    <include name="Large" displayName="${Large}">./_art/menutext/Large.xml</include>
  </subset>

  <view name="menu">

    <menuTextEdit name="menutextedit">
      <inactive>./_art/assets/textinput_inactive.png</inactive>
      <active>./_art/assets/textinput_active.png</active>
    </menuTextEdit>

  </view>

</theme>
